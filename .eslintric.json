# Super-Linter configuration file
# For more details, visit https://nvuillam.github.io/super-linter/

linters:
  eslint:
    lint_dir: "."
    eslint_config_file: ".eslintrc.json"

# Optional configuration
filters:
  skip:
    - "node_modules"
    - "dist"
    - "build"
    - ".github/workflows/lint.yml" # Skip linting the GitHub Actions workflow file

# Disable linters that you don't need
disabled_linters:
  - "csslint" # Example: disable CSS linting
  - "jscpd" # Example: disable duplicate code linting
  - "actionlint" # Example: disable GitHub Actions linting
  - "markdownlint" # Example: disable Markdown linting
  - "ts-standard" # Example: disable TypeScript standard linting
  - "jsonlint" # Example: disable JSON linting

# Optional: customize linter settings if needed
